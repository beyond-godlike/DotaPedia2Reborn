<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.EditTextMmrChecker" parent="Widget.AppCompat.EditText">
        <item name="android:width">250dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_default</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:layout_marginRight">@dimen/spacing_default</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
    </style>

    <style name="AppTheme.ImageViewMmrChecker">
        <item name="android:layout_marginLeft">@dimen/spacing_default</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="AppTheme.TextViewDescriptionMmrChecker">
        <item name="android:layout_marginLeft">@dimen/spacing_default</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="AppTheme.TextViewDataMmrChecker">
        <item name="android:layout_marginLeft">@dimen/spacing_default</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
    </style>

    <style name="AppTheme.ButtonMmrChecker">
        <item name="android:width">250dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_default</item>
        <item name="android:layout_marginRight">@dimen/spacing_default</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:background">@drawable/bt_mmr_checker</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
</resources>