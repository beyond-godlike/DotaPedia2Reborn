<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/plus</item>
        <item name="android:layout_margin">25dp</item>
    </style>

    <style name="AppTheme.LinearLayoutMainActivity">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.LinearLayoutMainActivityVertical">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.ActivityHomeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/btn_new</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.TextLabel">
        <item name="android:layout_margin">25dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_margin">18dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:ems">10</item>
    </style>


</resources>
