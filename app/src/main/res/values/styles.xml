<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/plus</item>
        <item name="android:layout_margin">@dimen/spacing_fab</item>
    </style>

    <style name="AppTheme.LinearLayoutMainActivity">
        <item name="android:layout_marginLeft">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.LinearLayoutMainActivityVertical">
        <item name="android:layout_marginLeft">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.ActivityHomeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/btn_new</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
    </style>

    <style name="AppTheme.TextLabel">
        <item name="android:layout_margin">@dimen/spacing_default</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_margin">@dimen/spacing_medium</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:ems">10</item>
    </style>

    <style name="AppTheme.MaterialCard">
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.ImageButtonSkill">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/shadow</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.ButtonHeroConstructor">
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:background">@drawable/btn_new</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.TextViewHeroName">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorLink">@color/HP</item>
    </style>

    <style name="AppTheme.TextViewHp">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/hp_style</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextViewMp">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/mp_style</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
