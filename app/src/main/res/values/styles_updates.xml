<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.CardView">
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="AppTheme.TextViewTitle">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.TextViewDescription">
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">14</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TextViewDate">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>