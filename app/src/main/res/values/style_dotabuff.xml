<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.TextViewDotabuff">
        <item name="android:width">120dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:layout_marginLeft">@dimen/spacing_default</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Widget.TextView</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.EditTextDotabuff">
        <item name="android:width">280dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Widget.EditText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
    </style>

    <style name="AppTheme.ButtonDotabuff">
        <item name="android:width">280dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:background">@drawable/btn_new</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Widget.Button</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
    </style>
</resources>