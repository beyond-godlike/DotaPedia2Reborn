<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.MaterialCard">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:elevation">@dimen/spacing_elevation</item>
    </style>
    <style name="AppTheme.ButtonHeroConstructor">
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/btn_new</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="AppTheme.TextViewHp">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/hp_style</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="AppTheme.TextViewMp">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/mp_style</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>