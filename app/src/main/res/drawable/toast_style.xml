<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorToastBackground"
                android:endColor="@color/colorToastBackground"
                android:centerColor="@color/colorToastBackground"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorStrokeToast"/>
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/spacing_small"
                android:top="@dimen/spacing_minimum"
                android:right="@dimen/spacing_small"
                android:bottom="@dimen/spacing_minimum" />
        </shape>
    </item>
</selector>