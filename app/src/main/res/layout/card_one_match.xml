<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.CardView"
>

    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:orientation="horizontal"
    >

        <ImageView
                android:id="@+id/ivHeroIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_rowSpan="1"
                android:layout_margin="@dimen/spacing_small"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_nickname"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvKills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_kills"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvDeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_deaths"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvAssists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_assists"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvNetworth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_networth"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvLhdn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_lh_dn"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvGpmxpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_gpm_xpm"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvDmg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_dmg"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvHeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_heal"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvBldDmg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:text="@string/tv_bld_dmg"
                style="@style/AppTheme.TextViewOneMatch"
        />
        <TextView
                android:id="@+id/tvWards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:visibility="invisible"
                android:text="@string/tv_wards"
                style="@style/AppTheme.TextViewOneMatch"
        />
    </GridLayout>
</androidx.cardview.widget.CardView>